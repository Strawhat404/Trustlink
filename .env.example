# Trustlink Environment Configuration
# Copy this file to .env and fill in your actual values.

# -----------------------------------------------------------------------------
# DJANGO CORE SETTINGS
# -----------------------------------------------------------------------------
# Generate a new secret key for your project. You can use an online generator.
SECRET_KEY='your-django-secret-key-here'

# Set to False in production for security.
DEBUG=True

# Add your ngrok domain here for webhook testing, e.g., 'localhost,127.0.0.1,.ngrok.io'
ALLOWED_HOSTS=localhost,127.0.0.1

# -----------------------------------------------------------------------------
# DATABASE SETTINGS
# -----------------------------------------------------------------------------
# Default is SQLite for easy setup. For production, use PostgreSQL.
# Example for PostgreSQL: DATABASE_URL=postgres://user:password@host:port/dbname
DATABASE_URL=sqlite:///db.sqlite3

# -----------------------------------------------------------------------------
# TELEGRAM BOT SETTINGS
# -----------------------------------------------------------------------------
# Get your bot token by talking to @BotFather on Telegram.
TELEGRAM_BOT_TOKEN='your-telegram-bot-token-here'

# -----------------------------------------------------------------------------
# PAYMENT GATEWAY SETTINGS (COINBASE COMMERCE)
# -----------------------------------------------------------------------------
# Get these from your Coinbase Commerce account dashboard.
COINBASE_COMMERCE_API_KEY='your-coinbase-api-key-here'
COINBASE_COMMERCE_WEBHOOK_SECRET='your-coinbase-webhook-secret-here'
